@model  OnlineInternshipPortal.Models.Data.ViewModel.DesignationViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>List of designation</h1>

<br />
<div class="alert alert-info">
    Designation
</div>

<div class="card">
    <div class="card-header bg-transparent">
        <!-- Button trigger modal -->
        <a asp-controller="Designation" asp-action="AddDesignation" class="btn btn-primary text-capitalize">
            <span class="fas fa-plus"> Add new designation</span>
        </a>

    </div>

    <div class="card-body">
        <table id="designationtbl" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        S/No
                    </th>
                    <th>
                        Designation
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

        </table>
    </div>

</div>

<!--Add db Modal-->
<div class="modal fade" id="addDesignationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-user text-primary"> Add new designation</i></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="AddDesignation" method="post">
                <div class="modal-body">



                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label"><strong>Designation</strong></label>
                        <input asp-for="DesignationName" class="form-control" />
                        <span asp-validation-for="DesignationName" class="text-danger"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><span class="fa fa-save"> </span> Submit</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="fa fa-times"></span> Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!--Modal-->



@section Scripts{
    <script src="~/js/tablesjs/DesignationList.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    
}