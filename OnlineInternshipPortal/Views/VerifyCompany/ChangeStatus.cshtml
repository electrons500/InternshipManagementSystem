@model OnlineInternshipPortal.Models.Data.ViewModel.VerifyCompanyViewModel

@{
    ViewData["Title"] = "ChangeStatus";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<h2>Verify a company</h2>
<hr />
<div class="card au-card shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="ChangeStatus">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CompanyId" />
                    <div class="form-group">
                        <label asp-for="CompanyName" class="control-label"></label>
                        <input asp-for="CompanyName" class="form-control" readonly />

                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VerifyCategoryId" class="control-label"></label>

                        <select asp-for="VerifyCategoryId" asp-items="@Model?.VerifyCompanyList" class="form-control">
                            <option>Select a status</option>
                        </select>
                        <span asp-validation-for="VerifyCategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

