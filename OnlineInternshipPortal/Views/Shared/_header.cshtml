<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Internship Portal</title>
    <link href="~/css/customfonts.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/FontAwesome.4.7.0/Content/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
   
    @* <link href="~/lib/mdbootstrap/css/mdb.min.css" rel="stylesheet" />*@
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    <style type="text/css">
        * {
            font-family: 'Montserrat', sans-serif;
            font-size: medium;
        }

        .btn-primary {
            background-color: #4285F4;
            color: #ffff;
        }


        .dropdown-menu a:hover {
            background-color: #8E24AA;
            color: white;
        }
    </style>

</head>
<body>
    <header>
        <!--Navbar -->
        <nav class="mb-1 navbar navbar-expand-lg navbar-dark  border-bottom box-shadow mb-3" style="background-color: #8E24AA">
            <div class="container">
                <a class="navbar-brand" href="#"><span></span> InternGo</a>
                <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarSupportedContent-555"
                        aria-controls="navbarSupportedContent-555 " aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-555">
                    <ul class="navbar-nav mr-auto">
                    </ul>
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
        <!--/.Navbar -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @await Html.PartialAsync("_NotificationPartial")
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Copyright &copy; @DateTime.Now.Year - Online Internship System
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    
    <script src="~/lib/datatables-responsive/dataTables.responsive.js"></script>
    <script src="~/lib/datatables.net-responsive-bs4/responsive.bootstrap4.min.js"></script>
    @* <script src="~/lib/mdbootstrap/js/mdb.min.js"></script>*@




    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
