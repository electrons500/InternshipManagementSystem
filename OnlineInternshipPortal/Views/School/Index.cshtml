@model OnlineInternshipPortal.Models.Data.ViewModel.SchoolViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<h1>List of schools</h1>
<br />
<div class="alert alert-info">
    School
</div>

<div class="card">
    <div class="card-header bg-transparent">
        <!-- Button trigger modal -->
        <a asp-controller="School" asp-action="AddSchool" class="btn btn-primary text-capitalize">
            <span class="fas fa-plus"> Add new school</span>
        </a>

    </div>
    <div class="card-body">
        <table id="schooltbl" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SchoolId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SchoolName)
                    </th>

                    <th>Action</th>
                </tr>
            </thead>

        </table>
    </div>
</div>

<div class="modal fade" id="addSchoolModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-school text-primary"> Add new school</i></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="AddSchool" method="post">
                <div class="modal-body">



                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label"><strong>School name</strong></label>
                        <input asp-for="SchoolName" class="form-control" />
                        <span asp-validation-for="SchoolName" class="text-danger"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><span class="fa fa-save"> </span> Submit</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="fa fa-times"></span> Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/tablesjs/SchoolList.js"></script>
}